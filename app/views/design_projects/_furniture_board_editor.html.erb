<% content_for :custom_scripts do %>
  <%= javascript_include_tag "specific/furniture_board_editor.js" %>
<% end %>

<div class='furniture-board-dragg'>

  <div class="furniture-board-editor-items-panel">
    <% @project.included_products.each do |item| %>
      <div class='draggable2 items-panel-elem' data-id="<%= item.id %>">
        <% if image_link(item, 'default_image') %>
          <%= image_tag image_link(item, 'default_image'), width: '100%', height: '100%' %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="furniture-board-editor">
    <% @project.included_products.each do |item| %>
      <span class='room-item' style="position: absolute;" data-width="<%= item.width %>" data-height="<%= item.depth %>">

        <%= image_tag 'remove.png', class: 'remove-icon remove-item', 'data-item-id': item.id, width: '15px', height: '15px', hidden: true %>

        <div id="<%= item.id %>" class="draggable" data-width="<%= item.width %>" data-height="<%= item.depth %>">

          <% if image_link(item, 'default_image') %>
            <%= image_tag image_link(item, 'default_image'), width: '100%', height: '100%', class: 'item-image'%>
          <% end %>

          <div class="point left-top"></div>
          <div class="point right-top"></div>
          <div class="point left-bottom"></div>
          <div class="point right-bottom"></div>
        </div>

        <%= image_tag 'rotate.png', class: 'rotation-arrow', width: '20px', height: '20px', hidden: true %>

        <div class='elem-tooltip' id="tooltip-<%= item.id %>" style='visibility:hidden;'>
          <%= link_to item.permalink, target:"_blank" do %>
            <p><%= item.name %></p>
          <% end %>
          <p><b>Width:</b> <%= item.width %><br>
          <b>Heigh:</b> <%= item.height %><br>
          <b>Depth:</b> <%= item.depth %></p>
          <span class="glyphicon glyphicon-trash remove-item" aria-hidden="true" data-item-id="<%= item.id %>"></span>
        </div>

      </span>
    <% end %>
  </div>
</div>
