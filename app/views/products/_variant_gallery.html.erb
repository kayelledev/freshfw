<div class="col-full">
  <div id="ProductCarousel" class="carousel slide" data-ride="carousel" style="">
	  <div class="carousel-outer">
		  <div class="carousel-inner" role="listbox" style="min-width: 100%; min-height: 100%;">
		     <div class="item active" ><%= image_tag product.default_image,  class: "img-responsive", alt: "product" %>
		     </div>

		      <% if product.image2.url %>
		        <div class="item" style="margin: auto; padding: auto;"><%= image_tag product.image2, class: "img-responsive", alt: "product" %></div>
		      <% end %>
		      <% if product.image3.url %>
		        <div class="item"><%= image_tag product.image3, class: "img-responsive", alt: "product" %></div>
		      <% end %>
		      <% if product.image4.url %>
		        <div class="item"><%= image_tag product.image4, class: "img-responsive", alt: "product" %></div>
		      <% end %>
		      <% if product.image5.url %>
		        <div class="item"><%= image_tag product.image5, class: "img-responsive", alt: "product" %></div>
		      <% end %>
		      <% if product.image6.url %>
		        <div class="item"><%= image_tag product.image6, class: "img-responsive", alt: "product" %></div>
		      <% end %>
		  </div>
		    <!-- Controls -->
		    <a class="left carousel-control" href="#ProductCarousel" role="button" data-slide="prev"><i class="glyphicon glyphicon-chevron-left" style="vertical-align: middle; "></i></a>
		    <a class="right carousel-control" href="#ProductCarousel" role="button" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i></a>
		</div>
    <ol class='carousel-indicators mCustomScrollbar'>
      <li data-target='#ProductCarousel' data-slide-to='0' class='active'><%= image_tag product.default_image.thumbnail, class: "img-responsive", alt: "product" %></li>
      <li data-target='#ProductCarousel' data-slide-to='1'><%= image_tag product.image2.thumbnail, class: "img-responsive", alt: "product" %></li>
      <li data-target='#ProductCarousel' data-slide-to='2'><%= image_tag product.image3.thumbnail, class: "img-responsive", alt: "product" %></li>
      <li data-target='#ProductCarousel' data-slide-to='3'><%= image_tag product.image4.thumbnail, class: "img-responsive", alt: "product" %></li>
      <li data-target='#ProductCarousel' data-slide-to='4'><%= image_tag product.image5.thumbnail, class: "img-responsive", alt: "product" %></li>
      <li data-target='#ProductCarousel' data-slide-to='5'><%= image_tag product.image6.thumbnail, class: "img-responsive", alt: "product" %></li>
    </ol>
	</div>
</div>
