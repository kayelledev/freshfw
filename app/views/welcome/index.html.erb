<div class="container" id="portfolio" >

	<div class="col-full" style="border-bottom: 1px solid #ccc; width: 100%; margin: 30px 0 10px 0; " ><h4 class="section-heading" style="color: #333;">Featured Rooms</h4>
	</div>
    <div class="col-md-8 portfolio-item">
          <% livingroomId = Shoppe::ProductCategory.where(permalink: "living-rooms") %>
		  <% product1= Shoppe::Product.where(product_category_id: livingroomId ).first %>
  		  <a href="<%= product_path(product1.permalink) if product1.present?  %>" class="portfolio-link" data-toggle="modal">
                <div class="portfolio-hover" >
                    <div class="portfolio-hover-content">
  					  <%= product1.name if product1.present?  %>
                    </div>
                </div>
				<%= default_image(product1) if product1.present? && default_image(product1) %>
          </a>
      </div>
      <div class="col-md-4 portfolio-item">
		  <% product2= Shoppe::Product.where(product_category_id: livingroomId ).last %>
		  <a href="<%= product_path(product2.permalink) if product2.present? %>" class="portfolio-link" data-toggle="modal">
              <div class="portfolio-hover" >
                  <div class="portfolio-hover-content">
					  <%= product2.name if product2.present? %>
                  </div>
              </div>
              <%= default_image(product2) if product2.present? && default_image(product2) %>
          </a>
         <% diningroomId = Shoppe::ProductCategory.where(permalink: "dining-rooms") %>
		  <% product3= Shoppe::Product.where(product_category_id: diningroomId).first%>
  		  <a href="<%= product_path(product3.permalink) if product3.present? %>" class="portfolio-link" data-toggle="modal">
            <div class="portfolio-hover" >
                <div class="portfolio-hover-content">
				  <%= product3.name if product3.present? %>
                </div>
            </div>
            <%= default_image(product3) if product3.present? && default_image(product3) %>
        </a>
    </div>
</div>

