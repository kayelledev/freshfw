<div class="container">	  
	<h2 style='padding-left: 2em; padding-top: 1em; '>Step 3 of 3: Make Payment</h2>
  <% puts @params 
  @order = current_order %>
  	<%= render 'orders/final_items', :order => @order %>
	<div class="row" style="float: right; margin-right: 6em;">
	<%= form_tag charges_path do %>
	  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
	          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
	          data-description="<%=@order.first_name %>'s Order"
	          data-amount="<%=@order.total*100%>"
	  		data-stripeEmail="<%= @order.email_address %>"></script>  
	<% end %>
	</div>
</div>