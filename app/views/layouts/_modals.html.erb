<!-- Modal -->
<div class="modal fade" id="changeCurrencyModal" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4><div class="text-center">Changing the Currency?</div></h4>
      </div>
      <div class="modal-body">
        Product prices, shipping charges and taxes will be adjusted to reflect the new currency. Delivery timeframe may also be changed.
      </div>
      <div class="modal-footer">
        <div class="text-center">
          <button type="submit" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-default change-currency-button" data-currency="<%= dropdown_currency %>"> Proceed</button>
        </div>
      </div>
    </div>
    
  </div> 
</div>     
