<!DOCTYPE html>
<html>
  <head>
    <title>Four Walls</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= yield :custom_scripts %>
    <style>
      html,
      body {
        margin:0;
        padding:0;
        height:100%;
      }
      #wrapper {
        min-height:100%;
        position:relative;
      }
      #header {
        background:#ededed;
        padding:10px;
      }
      #content {
        padding-bottom:100px; /* Height of the footer element */
      }
      #footer {
        width:100%;
        height:90px;
        position:absolute;
        bottom:0;
        left:0;
      }
    </style>
  </head>
  <body>
    <div id="wrapper">

      <div id="header">
        <%= render 'layouts/navigation' %>
      </div><!-- #header -->


      <div id="content">
        <%= yield %>
      </div><!-- #content -->

      <div id="footer">
        <%= render 'layouts/footer' %>
      </div><!-- #footer -->

    </div><!-- #wrapper -->
  </body>
</html>
