<!DOCTYPE html>
<html>
  <head>
    <title>Four Walls</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= yield :custom_scripts %>
    <style>
      html,
      body {
        margin:0;
        padding:0;
        height:100%;
      }
      #wrapper {
        min-height:100%;
        position:relative;
        width: 100%;
      }
      #header {
        background:#ededed;
        padding-top: 0px;
        padding-bottom: 0px;
        padding-left: 0px;
        padding-right: 0px;
        width: 100%;
      }
      #content {
        padding-bottom:100px; /* Height of the footer element */
        width: 100%;
      }
      #footer {
        width:100%;
        position:absolute;
        bottom:0;
        left:0;
      }
      div.container-fluid{
        padding-left:0px;
        padding-right:0px;
      }
      div.error-messages-block{
        margin:0px;
      }
      nav.navbar.navbar-default.navbar-custom.header-navbar{
        border-bottom-width: 15px;
        border-right-width: 15px;
        border-left-width: 15px;
      }
    </style>
  </head>
  <body>
    <div id="wrapper">
      <div id="header">
        <%= render 'layouts/navigation' %>
      </div><!-- #header -->
      <div id="content">
        <%= yield %>
        <%= render 'layouts/modals' %>
      </div><!-- #content -->
      <div id="footer">
        <%= render 'layouts/footer' %>
      </div><!-- #footer -->

    </div><!-- #wrapper -->
  </body>
</html>
