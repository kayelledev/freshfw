<div class="navbar-wrapper" >
  <div class="container-fluid">

	<nav class="navbar navbar-default navbar-custom header-navbar">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll" >
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
				<%= link_to root_url, class: 'navbar-brand' do %>
                    <%= image_tag "Fourwalls-logo-shopper-theme-1932x300.png", style: 'width: 300px; max-width: 80%; valign: center;' %>
                <% end %>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right" id="countrySelectCurrency">
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                      <span class="icon flag-<%= current_currency %>"></span><span><%= dropdown_currency_label(current_currency) %></span><span class="caret"></span></a>
                    <ul class="dropdown-menu">
                      <li><a id="selectNewCurrency"><span class="icon flag-<%= dropdown_currency %>"></span><span><%= dropdown_currency_label(dropdown_currency) %></span></a></li>
                    </ul>
                  </li>
                </ul>

                

                <ul class="nav navbar-nav navbar-right">
                    <li><%= link_to "Shop", products_url, class: "active"%></li>
                    <li><%= link_to "About Us", about_us_url, class: "active"%></li>
                    <li><%= link_to "Blog", blog_url %></li>
                    <li><%= link_to "Cart (#{current_order.total_items})", cart_path, class: "active"%></li>
                    
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
	</nav>

  </div>
</div>
