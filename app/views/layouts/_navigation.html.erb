	</header> -->
<% end %>


<!-- Modal -->
  <div class="modal" id="myModal" role="dialog" style="max-width: 95%; min-width: 80%; opacity: 0.8;">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 style="color:black;"><span class="glyphicon glyphicon-lock"></span>Sign In or Create Account</h4>
        </div>
        <%= render 'devise/shared/sign_in_or_register' %>
        
      </div>
    </div>
  </div> 