<div class='room-inputs active-room-inputs' data-room-id='0' data-room-type='rect'>
  <%= hidden_field_tag 'room-id', '0' %>
  <div class="form-group">
    <label class='col-sm-3 control-label'>North (N)<br>South (S)</label>
    <div class="col-sm-9 equal">
      <input type="number" class="form-control dialog-input n-s-ft" placeholder="ft." min="0" step="1" value='0' required>
      <span>ft.</span>
      <input type="number" class="form-control dialog-input n-s-inch" placeholder="inch." min="0" step="0.01" value='0.00' required>
      <span>in.</span>
    </div>
  </div>

  <div class="form-group">
    <label class='col-sm-3 control-label'>East (E)<br>West (W)</label>
    <div class="col-sm-9 equal">
      <input type="number" class="form-control dialog-input e-w-ft" id="e-w-ft" placeholder="ft." min="0" step="1" value='0' required>
      <span>ft.</span>
      <input type="number" class="form-control dialog-input e-w-inch" id="e-w-inch" placeholder="inch." min="0" step="0.01" value='0.00' required>
      <span>in.</span>
    </div>
  </div>
</div>
