- @page_title = t('shoppe.design_projects.design_projects')

= content_for :header do
  %p.buttons
    = link_to t('shoppe.design_projects.request_revision') , [:request_revision, @design_project], method: 'post', :class => 'button green'
    = link_to t('shoppe.design_projects.reject'), [:reject, @design_project], method: 'post', :class => 'button green'
    = link_to t('shoppe.design_projects.approve') , [:approve, @design_project], method: 'post', :class => 'button green'
  %h2.products= "#{t('shoppe.design_projects.design_project')} - #{@design_project.id}"
%main
  %section.main-tabs
    .l-wrapper
      = link_to 'project info', @design_project, class: "main-tabs__one-tab main-tabs__one-tab--active" 
      = link_to 'select items', [:select_items, @design_project], class: "main-tabs__one-tab", id: 'select-items-tab', remote: true 
      = link_to 'room builder', [:room_builder, @design_project], class: "main-tabs__one-tab", remote: true 
      = link_to 'instructions', [:instructions, @design_project], class: "main-tabs__one-tab", remote: true 
  .l-wrapper
    .l-tabs-alignment
      .info-table
        .info-table__row
          .info-table__cell project status:
          .info-table__cell= @design_project.status
        .info-table__row
          .info-table__cell creation date:
          .info-table__cell= @design_project.created_at.strftime('%b %d, %Y')
        .info-table__row
          .info-table__cell last modefied date:
          .info-table__cell= @design_project.updated_at.strftime('%b %d, %Y')
        .info-table__row
          .info-table__cell designed by:
          .info-table__cell= @design_project.user.full_name
        .info-table__row
          .info-table__cell designer email:
          .info-table__cell= @design_project.user.email_address
      = form_for @design_project, html: { class: "project-init-info", id: 'project-form', multipart: true }, remote: true do |f| 
        .project-init-info__row
          .project-init-info__cell Project Name
          .project-init-info__cell
            %label.project-init-info__label
              = f.text_field :name, class: "project-init-info__input", id: 'project-name' 
          .project-init-info__cell
        .project-init-info__row
          .project-init-info__cell Inspiration
          .project-init-info__cell
            %label.project-init-info__label
              = f.text_area :inspiration, class: "project-init-info__textarea", id: 'project-inspiration' 
          .project-init-info__cell
        .project-init-info__row
          .project-init-info__cell Inspiration Images
          .project-init-info__cell
            .project-init-info__adm-img-cont.l-cont
              - if image_link(@design_project, 'inspiration_image1')
                = image_tag image_link(@design_project, 'inspiration_image1'), :class => 'l-el'
              - if image_link(@design_project, 'inspiration_image2')
                = image_tag image_link(@design_project, 'inspiration_image2'), :class => 'l-el'
              - if image_link(@design_project, 'inspiration_image3')
                = image_tag image_link(@design_project, 'inspiration_image3'), :class => 'l-el'
          .project-init-info__cell
        .project-init-info__row
          .project-init-info__cell Room Type
          .project-init-info__cell
            %label.project-init-info__label
              = f.collection_select :product_category_id, Shoppe::ProductCategory.order(:name), :id, :name, {:class => 'project-init-info__select'} 
                
          .project-init-info__cell
        .project-init-info__row
          .project-init-info__cell Ideal Room Size
          .project-init-info__cell
            %table
              %tr
                %td
                  %span Width
                  %label.project-init-info__small-label
                    = number_field_tag :width_ft, nil, class: "project-init-info__small-input", id: 'project-width-ft', min: "0", step: "1"
                  %span ft.
                %td
                  %label.project-init-info__small-label
                    = number_field_tag :width_in, nil, class: "project-init-info__small-input", id: 'project-width-in', min: "0", step: "0.01" 
                  %span in.
              %tr
                %td
                  %span Depth
                  %label.project-init-info__small-label
                    = number_field_tag :depth_ft, nil, class: "project-init-info__small-input", id: 'project-depth-ft', min: "0", step: "1" 
                  %span ft.
                %td
                  %label.project-init-info__small-label
                    = number_field_tag :depth_in, nil, class: "project-init-info__small-input", id: 'project-depth-in', min: "0", step: "0.01" 
                  %span in.
          .project-init-info__cell

