%h2= 'Roles'
.table-container
  %table
    %thead
      %tr
        %th= 'Role Name'
        %th= 'Actions'
    %tbody
      - @roles.each do |role|
        %tr
          %td= role.name
          %td  
            = link_to 'Show', role, :class => 'button green'
            = link_to 'Delete', role, :class => 'button purple', :method => :delete, :data => {:confirm => 'Are you sure you wish to remove this role?'}
